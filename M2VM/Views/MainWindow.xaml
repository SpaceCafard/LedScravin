<Window
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:av="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="av" x:Class="ProjetBadge.MainWindow"
    Title="MainWindow" Height="400" Width="600">
    <Grid>
        <!--Port de connexion-->
        <Label Content="Numéro port:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0"/>
        <TextBox x:Name="PortTextBox" Width="100" Height="25" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="100,10,0,0"/>
        <Button Content="Connexion" Width="100" Height="25" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="250,10,0,0" Click="ConnectButton_Click"/>
        <!--Message à envoyer-->
        <Label Content="Message:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,50,0,0"/>
        <TextBox x:Name="MessageTextBox" Width="100" Height="25" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="100,50,0,0"/>
        <Button Content="Envoyer" Width="100" Height="25" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="250,50,0,0" Click="SendMessageButton_Click"/>
        <!--Status connexion-->
        <TextBlock x:Name="StatusTextBlock" Width="360" Height="25" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,90,0,0"/>

        <!--Lister des messages-->
        <ListBox x:Name="MessagesListBox" Margin="10,160,360,40" SelectionChanged="MessagesListBox_SelectionChanged"/>

        <!--Ajouter un message-->
        <Label Content="Message :" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,120,0,0"/>
        <TextBox x:Name="SaveMessageTextBox" Width="100" Height="25" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="100,120,0,0"/>
        <Button Content="Enregistrer" Width="100" Height="25" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="250,120,0,0" Click="SaveMessageButton_Click"/>

        <!--Actions sur le message sélectionné-->
        <Button x:Name="EditButton" Content="Modifier" Width="100" Height="25" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="370,200,0,0" Click="EditButton_Click" IsEnabled="False"/>
        <Button x:Name="DeleteButton" Content="Supprimer" Width="100" Height="25" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="370,240,0,0" Click="DeleteButton_Click" IsEnabled="False"/>
        <Button x:Name="SendSelectedButton" Content="Envoyer" Width="100" Height="25" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="370,280,0,0" Click="SendSelectedButton_Click" IsEnabled="False"/>

        <!--Trie-->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom">
            <Button Content="Trier alphabétiquement" Name="SortAlphabeticallyButton" Click="SortAlphabeticallyButton_Click" Margin="5"/>
            <Button Content="Trier par taille ascendante" Name="SortSizeAscendingButton" Click="SortSizeAscendingButton_Click" Margin="5"/>
            <Button Content="Trier par taille descendante" Name="SortSizeDescendingButton" Click="SortSizeDescendingButton_Click" Margin="5"/>
        </StackPanel>

        <!-- Filtrer -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="340,160,0,0">
            <Grid>
                <TextBox x:Name="SearchTextBox" Width="200" Margin="5" TextChanged="SearchTextBox_TextChanged"/>
                <TextBlock Text="Search..." IsHitTestVisible="False" 
                           VerticalAlignment="Center" 
                           HorizontalAlignment="Left" 
                           Margin="8,0,0,0" 
                           Foreground="Gray" 
                           />
            </Grid>
        </StackPanel>
    </Grid>
</Window>