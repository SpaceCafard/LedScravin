<Window x:Class="BadgeScreen.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Label Content="Message:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0"/>
        <TextBox Name="MessageTextBox" Width="100" Height="25" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="100,10,0,0"/>
        <Button Content="Connect" Width="100" Height="25" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,50,0,0" Click="ConnectButton_Click"/>
        <Button Content="Send Message" Width="100" Height="25" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="205,50,0,0" Click="SendMessageButton_Click"/>
        <Button Content="Disconnect" Width="100" Height="25" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="400,50,0,0" Click="DisconnectButton_Click"/>
        <TextBlock Name="StatusTextBlock" Width="645" Height="25" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,101,0,0"/>
    </Grid>
</Window>
